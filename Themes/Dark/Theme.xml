		<layout name="Super-Thin" width="220" height="18" allowDocked="false">
			<script>
				var left = 3, top = 3;
			</script>
			<control id="menu" left="left" top="top" width="10" height="10"/>
			
			<control id="timePassed" left="lastRight+5" top="top" width="25" height="10"/>
			<control id="timeSlider" left="lastRight" top="top" width="75" height="10"/>
			<control id="timeRemain" left="lastRight" top="top" width="25" height="10"/>

			<control id="prev" left="lastRight+6" top="top" width="16" height="12"/>
			<control id="play" left="lastLeft+14" top="top" width="12" height="12"/>
			<control id="next" left="lastLeft+10" top="top" width="16" height="12"/>

			<control id="mute" left="lastRight+4" top="top" width="10" height="10"/>
			<control id="volume" left="lastRight+2" top="top" width="10" height="10"/>
			<control id="volumeSlider" left="lastLeft-50" top="top" width="50" height="10"/>

			<control id="menuDialog" left="left" top="top" width="220-6" height="120"/>
